<footer>
    <p class="footer"><i class="fa-solid fa-paw"></i></p>
</footer>

{{#if pets.length}}
<div class="pet-list pet-list-section">
    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Pet List</h3>
</div>

{{#each pets as |pet|}}
<div class="row mb-2">
    <div class="col-md-8">
        <h4><a href="/pet/{{pet.id}}">{{pet.pet_name}}</a></h4>
    </div>
    <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{pet.id}}">Delete</button>
    </div>
</div>
{{/each}}
</div>
{{/if}}
</div>

