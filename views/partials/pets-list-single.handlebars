<div class="pet card btn btn-info">
    <img src="../images/coming-soon.png" class="card-img-top" />
    <div class="card-body">
        <h1 class="card-title">{{get_emoji}} {{pet_name}}</h1>
        <h4 class="card-text">
            Pet Type: {{type}} <br>
            Age: {{age}}  <br>
            Breed: {{breed}} <br>
            Gender: {{gender}}<br>
        </h4>
        <h4 class="card-text">
            <br>
            {{description}}
        </h4>
        <form class="form adopt-form">
            <button class="btn btn-dark" type="submit">Adopt {{pet_name}}</button>
        </form>
    </div>
</div>

<script src="/js/pet.js"></script>
